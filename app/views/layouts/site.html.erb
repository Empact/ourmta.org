<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title>FixMta.org: <%= @page_title || 'New York Deserves Better Transit' %></title>
    <%= javascript_include_tag :defaults %>   
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen, projection' %>
    <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
    <!--[if lt IE 8]>
      <%= stylesheet_link_tag 'blueprint/ie', :media => 'screen, projection' %>
    <![endif]-->
    <%= stylesheet_link_tag 'site' %>
  </head>
  <body>
    <div class="header container">
      <span><%= link_to 'FixMta.org', root_path %></span>
      <span>New York Deserves Better Transit</span>
      <ul>
        <li><%= link_to 'Our Stagnating System', problems_information_path %></li>
        <li><%= link_to 'The Beauty Abroad', possibilities_information_path %></li>
        <li><%= link_to 'The Upstate Problem, The Downstate Solution', proposal_information_path %></li>
        <li><%= link_to 'Pledge Your Support', pledge_support_path %></li>
      </ul>
    </div>
    <div class="container">
      <%= yield %>
    </div>
    <div class="footer container">
      <ul>
        <li>About Us</li>
        <li>Contact</li>
      </ul>
    </div>
  </body>
</html>