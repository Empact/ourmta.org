<h1>Sign up to FixMta.org</h1>
<% form_for :supporter, @supporter, :url => { :action => "create" } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email, "E-mail:" %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :pledged_public_support, "I would like to publicly pledge my support!" %>
    <%= f.check_box :pledged_public_support %>
  </p>
  <div id="public_pledge_information" style="display:none">
    <p>
      <%= f.label :name, "Name:" %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :message, "Message:" %>
      <%= f.text_area :message %>
    </p>
  </div>
  <%= submit_tag 'Create' %>
<% end %>

